<div class="row mt-5">
  <div class="col-md-4">
    <img src="{{cat.photo}}" alt="{{cat.name}}" />
  </div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-sm-8">
        <h4 class="display-5">{{cat.name}}</h4>
      </div>
      <div class="col-sm-4">
        <div class="btn-group mt-2">
          <button
            type="button"
            class="btn btn-info dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Action
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Edit</a></li>
            <li><a class="dropdown-item" href="/cats/new">Create New</a></li>
            <li><a class="dropdown-item" href="#">Remove</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/cats">Back to list</a></li>
          </ul>
        </div>
      </div>
    </div>
    <dl class="row mt-3">
      <dt class="col-sm-3">Пол</dt>
      <dd class="col-sm-9">
        {{#if cat.gender}}
          кот
        {{else}}
          кошка
        {{/if}}
      </dd>

      <dt class="col-sm-3">Возраст</dt>
      <dd class="col-sm-9">
        {{cat.age}}
      </dd>

      <dt class="col-sm-3">Окрас</dt>
      <dd class="col-sm-9">
        {{cat.colorName}}
      </dd>
    </dl>

  </div>
</div>